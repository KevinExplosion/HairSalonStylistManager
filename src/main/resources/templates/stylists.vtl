<div class="container formBackground">
<h3>Stylists</h3>

<div class="row">
  <div class="col-md-6">
    <form action="/stylists" method="post">
      <div class="form-group">
        <label for="stylistLastName">Last Name</label>
        <input class="form-control" type="text" name="stylistLastName" id="stylistLastName">
      </div>
      <div class="form-group">
        <label for="stylistFirstName">First Name</label>
        <input class="form-control" type="text" name="stylistFirstName" id="stylistFirstName">
      </div>
      <button type="submit" class="btn-btn-default">
        Add Stylist
      </button>
    </form>

#if ($allStylists)
  <form action="/stylists/delete" method="post">
    <ul>
      #foreach($stylist in $allStylists)
        <li><a href="stylists/$stylist.getId()">$stylist.getLastName(), $stylist.getFirstName()</a>&nbsp;
        <input type="checkbox" name="deleteStylist" value="$stylist.getId()" id="$stylist.getId()"></li>
      #end
    </ul>
    <button type="submit" class="btn btn-default" id="delete">
      Remove Stylist
    </button>
  </form>
#end
<br>
Return to <a href="/">Main Page</a>
</div>
</div>

<footer>
<h6>Contact us for an appointment</h6>
